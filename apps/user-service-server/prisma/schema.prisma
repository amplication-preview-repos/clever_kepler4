datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Permission {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
}

model Role {
  createdAt DateTime   @default(now())
  id        String     @id @default(cuid())
  name      String?
  updatedAt DateTime   @updatedAt
  userRoles UserRole[]
}

model UserRole {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  role      Role?    @relation(fields: [roleId], references: [id])
  roleId    String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime   @updatedAt
  userRoles UserRole[]
  username  String     @unique
}
